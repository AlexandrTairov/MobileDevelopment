<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/mobile_navigation"
            app:startDestination="@+id/nav_catalog">

    <fragment
            android:id="@+id/nav_home"
            android:name="com.example.mobile.ui.home.HomeFragment"
            android:label="@string/menu_home"
            tools:layout="@layout/fragment_home"/>

    <fragment
            android:id="@+id/nav_catalog"
            android:name="com.example.mobile.ui.catalog.CatalogFragment"
            android:label="@string/menu_catalog"
            tools:layout="@layout/fragment_catalog"/>

    <fragment
            android:id="@+id/nav_shares"
            android:name="com.example.mobile.ui.shares.SharesFragment"
            android:label="@string/menu_shares"
            tools:layout="@layout/fragment_shares"/>

    <fragment
            android:id="@+id/nav_basket"
            android:name="com.example.mobile.ui.basket.BasketFragment"
            android:label="@string/menu_basket"
            tools:layout="@layout/fragment_basket"/>

    <fragment
            android:id="@+id/nav_settings"
            android:name="com.example.mobile.ui.settings.SettingsFragment"
            android:label="@string/menu_settings"
            tools:layout="@layout/fragment_settings"/>

    <fragment
            android:id="@+id/nav_registration"
            android:name="com.example.mobile.ui.registration.RegistrationFragment"
            android:label="Registration"
            tools:layout="@layout/fragment_registration"/>

</navigation>